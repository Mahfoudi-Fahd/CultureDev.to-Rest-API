                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "description": "The status of the response",
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "user": {
                                            "description": "The authenticated user object",
                                            "type": "object"
                                        },
                                        "Authorization": {
                                            "description": "The authorization token",
                                            "properties": {
                                                "token": {
                                                    "description": "The authorization token value",
